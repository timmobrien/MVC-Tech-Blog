{{> nav}}


<div class="card mb-4 mt-5">
  <div class="card-header">
    Posted by: {{post.user.username}} at {{format_time post.createdAt}} on {{format_date post.createdAt}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <p class="card-text">{{post.content}}</p>
  </div>

  
  <div class="card-header my-2">
  {{#if post.comments}}
  <strong class="mb-2">Comments</strong>

  {{#each post.comments as |comment|}}
  {{> comment-card}}
  {{/each}}

  {{else}}
  <strong>No comments yet...</strong>
  {{/if}}
  </div>

    {{#if session.loggedIn}}
    <strong>Add a comment!</strong>
    <form class="comment-form">
      <div class="form-group">
        <textarea rows="3" class="form-control" id="body" ></textarea>
      </div>
      <button type="submit" class="btn btn-primary my-2 " id="submit-btn" data-id="{{post.id}}">Submit</button>
    </form>
    {{/if}}

</div>

<script src="../js/create-comment.js"></script>
